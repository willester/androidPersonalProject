<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".BiddingsBuyer">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="59dp"
            android:layout_height="41dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/SaveReportBiddings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bitter_bold"
            android:onClick="SaveReportBiddings"
            android:text="@string/save_reprt"
            app:backgroundTint="@color/powerful_red"
            app:cornerRadius="100px" />

        <Space
            android:layout_width="64dp"
            android:layout_height="44dp"
            android:layout_weight="1" />
    </LinearLayout>

    <ListView
        android:id="@+id/BiddingListBuyer"
        android:layout_width="match_parent"
        android:layout_height="557dp" />

</LinearLayout>