<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".FavoritesActivityBuyer">

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="76dp"
            android:layout_height="41dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/SaveReportFavs"
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/bitter_bold"
            android:onClick="SaveReportFavorites"
            android:text="@string/save_reprt"
            app:backgroundTint="@color/powerful_red"
            app:cornerRadius="100px" />

        <Space
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:layout_weight="1" />
    </LinearLayout>

    <ListView
        android:id="@+id/FavoritesList"
        android:layout_width="match_parent"
        android:layout_height="549dp">

    </ListView>

</LinearLayout>